@{
    ViewData["Title"] = "Home Page";
}

<div class="">
    <div class="row">
        <div class="d-flex justify-content-between align-items-center">
            <div class="fs-4 page-text fw-bold">Movies</div>
            <div>
                <Button type="button" class="btn-main text-white p-3 rounded rounded-3">+ Add Movie</Button>
            </div>
        </div>
    </div>
    <div id="GetMovies">
        @* _MovieListPartialView *@
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {

            function loadMovies() {
                $.ajax({
                    url: '@Url.Action("MovieList", "Home")',
                    type: 'Get',
                    success: function (result) {
                        $("#GetMovies").html(result);
                    },
                    error: function (xhr, status, error) {
                        console.error("error Loading the Movies:", error);
                    }
                });
            }

            loadMovies();

        });
    </script>
}